{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "jsx": "preserve",
    "moduleResolution": "node",
    "importHelpers": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": true,
    "checkJs": true,
    "allowJs": true,
    "outDir": "dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "isolatedModules": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*", "clients/web/node_modules/*", "clients/commons/node_modules/*"],
      "@commons/*": ["commons/*"],
      "@application/*": ["core/application/*"],
      "@web/*": ["clients/web/src/*"],
      "@client-commons/*": ["clients/commons/*"],
    },
  },
  "include": ["commons", "core", "clients", "babel.config.js", "jest.config.ts", "jest.env.ts"],
  "exclude": ["node_modules/**/*", "dist/", ".idea", ".vscode", ".github", "coverage", ".build", "clients/web/tailwind.config.js"]
}
