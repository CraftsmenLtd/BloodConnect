{
  "CreateDonationRequestModel": {
    "type": "object",
    "required": [
      "requestedBloodGroup",
      "bloodQuantity",
      "urgencyLevel",
      "location",
      "latitude",
      "longitude",
      "donationDateTime",
      "city",
      "contactNumber"
    ],
    "properties": {
      "requestedBloodGroup": {
        "$ref": "./../common-schemas.json#/BloodGroupEnum"
      },
      "bloodQuantity": {
        "type": "number",
        "minimum": 1,
        "maximum": 10
      },
      "urgencyLevel": {
        "type": "string",
        "enum": ["regular", "urgent"]
      },
      "city": {
        "type": "string",
        "minLength": 1
      },
      "location": {
        "type": "string",
        "minLength": 1
      },
      "latitude": {
        "type": "number",
        "minimum": -90,
        "maximum": 90
      },
      "longitude": {
        "type": "number",
        "minimum": -180,
        "maximum": 180
      },
      "donationDateTime": {
        "type": "string",
        "format": "date-time"
      },
      "contactNumber": {
        "$ref": "./../common-schemas.json#/PhoneNumberEnum"
      },
      "patientName": {
        "type": "string",
        "minLength": 1
      },
      "transportationInfo": {
        "type": "string"
      },
      "shortDescription": {
        "type": "string"
      }
    },
    "example": {
      "patientName": "John Doe",
      "requestedBloodGroup": "O-",
      "bloodQuantity": 2,
      "urgencyLevel": "urgent",
      "city": "Dhaka",
      "location": "Baridhara, Dhaka",
      "latitude": 23.7936,
      "longitude": 90.4043,
      "donationDateTime": "2024-12-20T15:00:00Z",
      "contactNumber": "+8801712345678",
      "transportationInfo": "Car available",
      "shortDescription": "Need blood urgently for surgery."
    }
  }
}
