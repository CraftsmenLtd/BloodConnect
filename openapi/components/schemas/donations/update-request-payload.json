{
  "UpdateDonationRequestModel": {
    "type": "object",
    "required": [
      "requestPostId"
    ],
    "properties": {
      "requestPostId": {
        "type": "string"
      },
      "bloodQuantity": {
        "type": "number",
        "minimum": 1,
        "maximum": 10
      },
      "urgencyLevel": {
        "type": "string",
        "enum": ["regular", "urgent"]
      },
      "donationDateTime": {
        "type": "string",
        "format": "date-time"
      },
      "contactNumber": {
        "type": "string",
        "pattern": "^\\+8801[3-9]\\d{8}$"
      },
      "patientName": {
        "type": "string",
        "minLength": 1
      },
      "transportationInfo": {
        "type": "string"
      },
      "shortDescription": {
        "type": "string"
      }
    },
    "additionalProperties": false,
    "not": {
      "properties": {
        "neededBloodGroup": {},
        "location": {},
        "latitude": {},
        "longitude": {}
      },
      "required": ["neededBloodGroup", "location", "latitude", "longitude"]
    },
    "example": {
      "requestPostId": "01J9TGD6A4BTWZGHC52ASJ4XSM",
      "bloodQuantity": 2
    }
  }
}
