{
  "CreateUserRequestModel": {
    "type": "object",
    "required": [
      "bloodGroup",
      "gender",
      "dateOfBirth",
      "preferredDonationLocations",
      "availableForDonation"
    ],
    "properties": {
      "phoneNumbers": {
        "type": "array",
        "items": {
          "$ref": "./../common-schemas.json#/PhoneNumberEnum"
        }
      },
      "bloodGroup": {
        "$ref": "./../common-schemas.json#/BloodGroupEnum"
      },
      "lastDonationDate": {
        "type": "string",
        "format": "date"
      },
      "height": {
        "type": "string"
      },
      "weight": {
        "type": "number"
      },
      "gender": {
        "type": "string",
        "enum": [
          "male",
          "female",
          "other"
        ]
      },
      "dateOfBirth": {
        "type": "string",
        "format": "date"
      },
      "preferredDonationLocations": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "area": {
              "type": "string"
            },
            "latitude": {
              "type": "number",
              "minimum": -90,
              "maximum": 90
            },
            "longitude": {
              "type": "number",
              "minimum": -180,
              "maximum": 180
            }
          }
        }
      },
      "availableForDonation": {
        "type": "boolean"
      },
      "NIDFront": {
        "type": "string"
      },
      "NIDBack": {
        "type": "string"
      },
      "lastVaccinatedDate": {
        "type": "string",
        "format": "date"
      }
    },
    "example": {
      "phoneNumbers": [
        "+8801834567890",
        "+8801755567822"
      ],
      "bloodGroup": "O-",
      "lastDonationDate": "2023-09-15",
      "height": "5.10",
      "weight": 70,
      "gender": "male",
      "dateOfBirth": "1990-05-15",
      "preferredDonationLocations": [
        {
          "area": "Banani",
          "latitude": 23.7936,
          "longitude": 90.4043
        },
        {
          "area": "mohakhali",
          "latitude": 22.7936,
          "longitude": 90.4043
        }
      ],
      "availableForDonation": true,
      "NIDFront": "https://cdn.bloodconnect.net/nid/1a2b3c4d5e-front.jpg",
      "NIDBack": "https://cdn.bloodconnect.net/nid/1a2b3c4d5e-back.jpg",
      "lastVaccinatedDate": "2023-03-01"
    }
  }
}
