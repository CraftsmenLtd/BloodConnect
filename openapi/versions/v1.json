{
  "openapi": "3.0.1",
  "tags": [
    {
      "name": "bloodconnect",
      "description": "API Endpoints for BloodConnect"
    },
    {
      "name": "bloodconnect-auth",
      "description": "Auth module of BloodConnect"
    },
    {
      "name": "bloodconnect-user",
      "description": "User module of BloodConnect"
    },
    {
      "name": "bloodconnect-donation",
      "description": "Donation module of BloodConnect"
    },
    {
      "name": "bloodconnect-notification",
      "description": "Push notification module of BloodConnect"
    },
    {
      "name": "cors-options",
      "description": "API Endpoints for BloodConnect cors options"
    }
  ],
  "info": {
    "title": "BloodConnect API",
    "description": "BloodConnect API",
    "version": "V1",
    "contact": {
      "name": "Craftsmen Ltd.",
      "url": "https://craftsmenltd.com/"
    },
    "license": {
      "name": "Apache 2.0",
      "url": "https://www.apache.org/licenses/LICENSE-2.0"
    }
  },
  "servers": [
    {
      "url": "https://API_GATEWAY_ID.execute-api.ap-south-1.amazonaws.com/api",
      "description": "localstack"
    },
    {
      "url": "https://${ENVIRONMENT}.bloodconnect.net/${API_VERSION}",
      "description": "${ENVIRONMENT}"
    }
  ],
  "paths": {
    "/auth/refresh-token": {
      "$ref": "./../paths/auth/refresh-token.json"
    },
    "/auth/register-organization": {
      "$ref": "./../paths/auth/register-organization.json"
    },
    "/users": {
      "$ref": "./../paths/users/users.json"
    },
    "/donations": {
      "$ref": "./../paths/donations/donations.json"
    },
    "/donations/accept": {
      "$ref": "./../paths/donations/accept.json"
    },
    "/notification/push/{userId}": {
      "$ref": "./../paths/notification/push.json"
    }
  },
  "components": {
    "securitySchemes": {
      "CognitoAuthorizer": {
        "type": "apiKey",
        "name": "Authorization",
        "in": "header",
        "x-amazon-apigateway-authtype": "cognito_user_pools",
        "x-amazon-apigateway-authorizer": {
          "providerARNs": [
            "${USER_POOL_ARN}"
          ],
          "type": "cognito_user_pools"
        }
      }
    }
  },
  "x-amazon-apigateway-request-validators": {
    "$ref": "./../validators.json"
  }
}