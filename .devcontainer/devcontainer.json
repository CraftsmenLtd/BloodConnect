{
  "name": "BloodConnect",
  "build": {
    "dockerfile": "../Dockerfile",
    "options": [
      "-t",
      "dev-image"
    ]
  },
  "postCreateCommand": {
    "npm": "npm i"
  },
  "workspaceMount": "source=${localWorkspaceFolder},target=/app,type=bind",
  "workspaceFolder": "/app",
  "runArgs": [
    "--env-file",
    ".devcontainer/.env",
    "--name",
    "bloodconnect-dev",
    "--rm",
    "--network=host"
  ],
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "dbaeumer.vscode-eslint",
        "hashicorp.terraform",
        "eamodio.gitlens",
        "streetsidesoftware.code-spell-checker",
        "visualstudioexptteam.vscodeintellicode-completions"
      ]
    }
  }
}
