{
  "name": "BloodConnect",
  "build": {
    "dockerfile": "../Dockerfile",
    "options": [
      "-t",
      "dev-image"
    ]
  },
  "postCreateCommand": "apt install -y openssh-client less",
  "runArgs": [
    "--env-file",
    ".devcontainer/devcontainer.env",
    "--name",
    "bloodconnect-dev",
    "--rm"
  ],
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "dbaeumer.vscode-eslint",
        "hashicorp.terraform",
        "eamodio.gitlens",
        "streetsidesoftware.code-spell-checker"
      ]
    }
  }
}
